type User @table(engine:"InnoDB"){
    "test"
    id: ID!
    login  : String! @column(default:"111") @dataType(length:10,decimals:2)
    password: String!
    name: String!
    age: Int
    age2: Int
    sex: [Sex]
    roles: Role
    test: [String]
    test2: [Int]!
    test3: [Float!]
}

type Role {
    id: ID!
    name: String!
    users: [User]
    resources: [Resource]
    type: [RoleType]
}

type Resource {
    id: ID!
    name: String!
    roles: [Role]
}

type Organization {
    id: ID!
    above: Organization
    name: String!
    users: [User]
}
