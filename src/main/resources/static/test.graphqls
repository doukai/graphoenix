

schema {
    query: QueryType
}

type QueryType {
    user(id: ID!): User
    users(expression: Expression!): [User]
    role(id : ID!) : Role
    resource(id: ID!): Resource
}

query HeroNameAndFriends {
    users(expression: {
        expressions: [{
            left:"name",sex:MAN
        }]
    }) {
        name,sex,login
    }
    role(id: 1){
        name,type
    }
}

enum RoleType {
    ADMIN
    USER
    ANONYMOUS
}

enum Sex {
    MAN
    FEMALE
}

enum Operator {
    EQ
    LK
    SW
    EW
    GT
    GTE
    LT
    LTE
    NIL
}

enum Conditional {
    AND
    OR
}

input Expression {
    conditional:Conditional
    expressions:[Expression]
    left:String
    is:Boolean
    not:Boolean
    operator:Operator
    string:String
    int:Int
    float:Float
    inStrings:[String!]
    inInts:[Int!]
    inFloats:[Float!]
    fromString:String
    toString:String
    fromInt:Int
    toInt:Int
    fromFloat:Float
    toFloat:Float
    sex:Sex
    roleType:RoleType
}

directive @table(
    engine : String="InnoDB"
) on OBJECT

directive @column(
    default: String
) on FIELD_DEFINITION

directive @dataType(
    type: String
    length: Int
    decimals: Int
) on FIELD_DEFINITION
