schema {
    query: QueryType
    mutation: MutationType
}

type QueryType {
    user(id: ID!): User
    #    users(ex:UserExpression): [User]
    users(name:StringExpression,cond:Conditional,role:RoleExpression,age:Int,test:[UserExpression]): [User]
    role(id : ID!) : Role
    resource(id: ID!): Resource
}

type MutationType {
    user(
        "test"
        id: ID
        login  : String
        password: String
        name: String
        age: Int
        disable: Boolean
        sex: [Sex]
        role: RoleInput): User
    #    users(ex:UserExpression): [User]
    users(name:String): [User]
    role(
        id: ID
        name: String
        users: [UserInput]
        resources: [ResourceInput]
        type: [RoleType]) : Role
    resource(id: ID!): Resource
}

